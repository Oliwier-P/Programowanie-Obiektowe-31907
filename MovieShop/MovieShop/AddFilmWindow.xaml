<Window x:Class="MovieShop.AddFilmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MovieShop"
        mc:Ignorable="d"
        Title="AddFilmWindow" Height="450" Width="800">
    <StackPanel Margin="10">

        <TextBlock Text="Nazwa" FontSize="20"/>
        <TextBox x:Name="TxtNazwa" FontSize="15" Padding="5" Margin="0,5"/>
        <TextBlock Text="Gatunek" FontSize="20"/>
        <TextBox x:Name="TxtGatunek" FontSize="15" Padding="5"  Margin="0,5"/>
        <TextBlock Text="Rok" FontSize="20"/>
        <TextBox x:Name="TxtRok" FontSize="15" Padding="5"  Margin="0,5"/>
        <TextBlock Text="Ilosc" FontSize="20"/>
        <TextBox x:Name="TxtIlosc" FontSize="15" Padding="5"  Margin="0,5"/>
        <TextBlock Text="Cena" FontSize="20"/>
        <TextBox x:Name="TxtCena" FontSize="15" Padding="5"  Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" Click="AddFilmCancel_OnClick" Margin="5"/>
            <Button Content="Dodaj" Click="AddFilmAdd_OnClick" Margin="5"/>
        </StackPanel>

    </StackPanel>
</Window>
