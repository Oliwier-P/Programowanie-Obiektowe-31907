<Window x:Class="MovieShop.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MovieShop"
        mc:Ignorable="d"
        Title="AddUser" Height="250" Width="800">
    <StackPanel Margin="10">

        <TextBlock Text="Nazwa" FontSize="20"/>
        <TextBox x:Name="TxtNazwa" FontSize="15" Padding="5" Margin="0,5"/>
        <ComboBox x:Name="RoleBox"
                  Width="200"
                  Margin="0,5"
                  SelectedIndex="0">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Klient"/>
        </ComboBox>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" Click="AddUserCancel_OnClick" Margin="5"/>
            <Button Content="Dodaj" Click="AddUserAdd_OnClick" Margin="5"/>
        </StackPanel>

    </StackPanel>
</Window>
